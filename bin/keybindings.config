context control
  trigger quit
    keyboard        escape
  trigger toggle_camera
    keyboard        t
    spatial_mouse   face_1
context turntable_camera
  axis2d movement
    keyboard        a d s w
    gamepad         right_x:deadzone=0.5 right_y:deadzone=0.5
    spatial_mouse   yaw:scale=-2 pitch:scale=2
context freeflight_camera
  axis3d movement
    keyboard        a d s w f r
    spatial_mouse   x y z
  axis3d rotation
    keyboard        e q n m y c
    spatial_mouse   yaw:scale=2 pitch:scale=2 roll:scale=2
