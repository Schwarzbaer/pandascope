context control
  trigger quit
    keyboard        escape
  trigger toggle_camera
    keyboard        t
    spatial_mouse   face_1
context turntable_camera
  axis3d movement
    keyboard        a d s w q e
  axis3d rotation
    keyboard        l j k i u o
  trigger recenter
    keyboard        h
  button contextual_freeflight
    keyboard        space
context freeflight_camera
  axis3d movement
    keyboard        a d s w q e
    spatial_mouse   yaw:scale=2 pitch:scale=2 roll:scale=2
  axis3d rotation
    keyboard        l j k i u o
  trigger recenter
    keyboard        h
