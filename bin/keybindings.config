context control
  trigger quit
    keyboard        escape
    spatial_mouse   face_1
context camera
  button modify_camera_mode
    keyboard        space
  axis3d movement
    keyboard        a d s w q e
    spatial_mouse   x:scale=10 y:scale=10 z:scale=10
  axis3d rotation
    keyboard        l j k i u o
    spatial_mouse   yaw pitch roll
  axis3d turntable
    keyboard        l j k i u o
    spatial_mouse   yaw:scale=-1 pitch:scale=-1 y:scale=10
  trigger rotate_camera_to_anchor
    keyboard        h
  trigger rotate_anchor_to_camera
    keyboard        z
  trigger snap_camera_to_anchor
    keyboard        f
  trigger snap_anchor_to_camera
    keyboard        r
